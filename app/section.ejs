<section id="sectionContainer">
    <% if (view === "list") { %>
        <% items.forEach(function (item) { %>
            <div class="listView">
                <div class="listImgCover">
                    <img class="listBookImg" src="<%= item.image %>" onerror="this.src='../assets/images/default.png'" />
                </div>
                <div class="listBookInfo">
                    <div class="listTitle"><%= item.title %></div>
                    <div class="listAuthor">저자 : <%= item.author %> ㅣ 출판사 : <%= item.publisher %></div>
                    <div class="listPubdate">출판일 : <%= item.pubdate %></div>
                    <div class="listPubdate">가격 : <%= item.price %>원</div>
                    <div>
                        <h5>책 소개 <a href="<%= item.url %>">(URL: <%= item.url %>)</a></h5>
                        <p><%= item.description.slice(0, 50) + "..." %></p>
                    </div>
                </div>
            </div>
        <% }) %>
    <% } else { %>
        <% items.forEach(function (item) { %>
            <a class="cardView" href="<%= item.url %>">
                <div class='cardThumbnail'>
                    <img class="cardBookImg" src="<%= item.image %>" onerror="this.src='../assets/images/default.png'" alt="">
                    <div class="cardBookInfo">
                        <div class="cardTitle"><%= item.title.slice(0, 13) %></div>
                        <div class="cardAuthor"><%= item.author.split('|').length > 1 ? item.author.split('|')[0] + " 외" : item.author %>ㅣ<%= item.publisher %></div>
                        <div class="cardPubdate"><%= item.pubdate %></div>
                    </div>
                </div>
            </a>
        <% }) %>
    <% } %>
</section>